---
interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  category?: string; // For backward compatibility, accepts primaryCategory
  primaryCategory?: string;
}

const { name, description, image, url, category, primaryCategory } = Astro.props;
const displayCategory = primaryCategory || category;
---

<article class="product-card bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:scale-[1.02] border border-gray-100">
  <div class="px-4 pt-4 pb-2">
    <h3 class="dm-sans text-sm md:text-base font-bold text-black truncate" title={name}>
      {name}
    </h3>
  </div>
  <div class="aspect-square w-full overflow-hidden bg-gray-50">
    <img
      src={image}
      alt={name}
      loading="lazy"
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-2.5">
    <p class="dm-sans text-gray-700 text-sm md:text-base mb-4 line-clamp-5">
      {description}
    </p>
    <div class="flex items-center justify-between">
      {displayCategory && (
        <span class="dm-sans text-xs font-semibold text-[#FCB55B] uppercase tracking-wide">
          {displayCategory}
        </span>
      )}
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="cartoon-button dm-sans ml-auto inline-flex items-center gap-2"
      >
        CHECK IT OUT
        <span>â†’</span>
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    animation: fadeIn 0.5s ease-in;
  }

  .dm-sans {
    font-family: "DM Sans", sans-serif;
  }

  .cartoon-button {
    background: #FFD700;
    color: #000;
    font-weight: 900;
    font-size: 0.7rem;
    padding: 0.45rem 0.9rem;
    border: 3px solid #000;
    border-radius: 0.75rem;
    box-shadow: 0 4px 0 #000, 0 6px 0 rgba(0, 0, 0, 0.2);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.1s ease;
    position: relative;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }

  .cartoon-button:hover {
    transform: translateY(2px);
    box-shadow: 0 2px 0 #000, 0 4px 0 rgba(0, 0, 0, 0.2);
  }

  .cartoon-button:active {
    transform: translateY(3px);
    box-shadow: 0 1px 0 #000, 0 2px 0 rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .cartoon-button {
      font-size: 0.8rem;
      padding: 0.55rem 1.1rem;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

