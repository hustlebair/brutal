---
interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  category?: string; // For backward compatibility, accepts primaryCategory
  primaryCategory?: string;
  price?: string;
}

const { name, description, image, url, category, primaryCategory, price } = Astro.props;
const displayCategory = primaryCategory || category;
---

<article class="product-card bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:scale-[1.02] border border-gray-100">
  <div class="px-4 pt-4 pb-2">
    <h3 class="dm-sans text-sm md:text-base font-bold text-black truncate" title={name}>
      {name}
    </h3>
  </div>
  <div class="aspect-square w-full overflow-hidden bg-gray-50">
    <img
      src={image}
      alt={name}
      loading="lazy"
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-2.5">
    <p class="dm-sans text-gray-700 text-sm md:text-base mb-2 line-clamp-5">
      {description}
    </p>
    <div class="flex items-end justify-between gap-3">
      <div class="flex flex-col gap-1 flex-1">
        {displayCategory && (
          <span class="pill-tag category-pill poppins uppercase tracking-wide">
            {displayCategory}
          </span>
        )}
        {price && (
          <span class="pill-tag price-pill poppins">
            {price}
          </span>
        )}
      </div>
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="cartoon-button poppins inline-flex items-center gap-2"
      >
        CHECK IT OUT
        <span>â†’</span>
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    animation: fadeIn 0.5s ease-in;
  }

  .dm-sans {
    font-family: "DM Sans", sans-serif;
  }

  .poppins {
    font-family: "Poppins", sans-serif;
  }

  .pill-tag {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    border-radius: 0.25rem;
    text-align: center;
    border: 1px solid rgba(0, 0, 0, 0.2);
    width: 100%;
    max-width: fit-content;
    font-size: 0.7rem;
    line-height: 1.3;
    font-weight: 600;
  }

  .category-pill {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
  }

  .price-pill {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
  }

  @media (min-width: 768px) {
    .pill-tag {
      padding: 0.25rem 0.6rem;
      font-size: 0.75rem;
    }
  }

  .cartoon-button {
    background: #FFD700;
    color: #000;
    font-weight: 900;
    font-size: 0.7rem;
    padding: 0.45rem 0.9rem;
    margin-bottom: 5px;
    border: 3px solid #000;
    border-radius: 0.75rem;
    box-shadow: 0 4px 0 #000, 0 6px 0 rgba(0, 0, 0, 0.2);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.1s ease;
    position: relative;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    flex-shrink: 0;
  }

  .cartoon-button:hover {
    transform: translateY(2px);
    box-shadow: 0 2px 0 #000, 0 4px 0 rgba(0, 0, 0, 0.2);
  }

  .cartoon-button:active {
    transform: translateY(3px);
    box-shadow: 0 1px 0 #000, 0 2px 0 rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .cartoon-button {
      font-size: 0.8rem;
      padding: 0.55rem 1.1rem;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

