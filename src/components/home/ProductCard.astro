---
interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  category?: string; // For backward compatibility, accepts primaryCategory
  primaryCategory?: string;
}

const { name, description, image, url, category, primaryCategory } = Astro.props;
const displayCategory = primaryCategory || category;
---

<article class="product-card bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:scale-[1.02] border border-gray-100">
  <div class="px-4 pt-4 pb-2">
    <h3 class="dm-sans text-sm md:text-base font-bold text-black truncate" title={name}>
      {name}
    </h3>
  </div>
  <div class="aspect-square w-full overflow-hidden bg-gray-50">
    <img
      src={image}
      alt={name}
      loading="lazy"
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-2.5">
    <p class="dm-sans text-gray-700 text-sm md:text-base mb-4 line-clamp-5">
      {description}
    </p>
    <div class="flex items-center justify-between">
      {displayCategory && (
        <span class="dm-sans text-xs font-semibold text-[#FF9900] uppercase tracking-wide">
          {displayCategory}
        </span>
      )}
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="dm-sans ml-auto bg-[#FF9900] text-black px-4 py-2 rounded-lg font-bold text-sm md:text-base hover:bg-[#ff8800] hover:shadow-lg transition-all duration-300 hover:scale-105 inline-flex items-center gap-2"
      >
        CHECK IT OUT
        <span>â†’</span>
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    animation: fadeIn 0.5s ease-in;
  }

  .dm-sans {
    font-family: "DM Sans", sans-serif;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

