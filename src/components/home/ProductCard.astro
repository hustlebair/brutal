---
interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  category?: string;
  likes?: number;
}

const { name, description, image, url, category, likes = 0 } = Astro.props;
---

<article class="product-card bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 hover:scale-[1.02] border border-gray-100">
  {category && (
    <div class="px-4 pt-4">
      <span class="text-xs font-semibold text-[#FF9900] uppercase tracking-wide">
        {category}
      </span>
    </div>
  )}
  <div class="aspect-square w-full overflow-hidden bg-gray-50">
    <img
      src={image}
      alt={name}
      loading="lazy"
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-4 md:p-6">
    <h3 class="text-xl md:text-2xl font-bold text-black mb-2 line-clamp-2">
      {name}
    </h3>
    <p class="text-gray-700 text-sm md:text-base mb-4 line-clamp-2">
      {description}
    </p>
    <div class="flex items-center justify-between">
      {likes > 0 && (
        <div class="flex items-center gap-1 text-gray-500 text-sm">
          <span>❤️</span>
          <span>{likes.toLocaleString()}</span>
        </div>
      )}
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer sponsored"
        class="ml-auto bg-[#FF9900] text-black px-4 py-2 rounded-lg font-bold text-sm md:text-base hover:bg-[#ff8800] hover:shadow-lg transition-all duration-300 hover:scale-105 inline-flex items-center gap-2"
      >
        CHECK IT OUT
        <span>→</span>
      </a>
    </div>
  </div>
</article>

<style>
  .product-card {
    animation: fadeIn 0.5s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

