---
import Layout from '@layouts/Default.astro';
import ProductCard from '@components/home/ProductCard.astro';
import GradientDotsBackground from '@components/home/GradientDotsBackground';
import TagGroupSelection from '@components/home/TagGroupSelection';
import { getProducts, type Product } from '@data/products';

// Get base URL for image normalization (works in both dev and production)
// Use site URL in production, or current origin in dev
const baseUrl = Astro.site?.toString() || new URL(Astro.url.origin).toString();
const allProducts = await getProducts(baseUrl);
---

<Layout
  title="Highest Liked: The Internet's Wishlist"
  pageTitle="HighestLiked"
  description="Discover the internet's wishlist â€” a curated collection of the coolest gadgets, viral Amazon finds, and trending TikTok products. From clever home upgrades to impulse-buy gifts, Highest Liked showcases what everyone's talking about online."
  ogImage={new URL('/og-image.jpg', Astro.url)}
>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="px-4 md:px-8 pt-16 pb-4 text-center">
      <h1 class="libre-baskerville-bold text-4xl md:text-6xl lg:text-7xl text-black mb-4 md:mb-6 leading-tight">
        The Internet's <span class="text-gradient-logo">Wishlist</span>
      </h1>
      <p class="libre-baskerville-regular text-lg md:text-xl lg:text-2xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
        The Highest-Liked gadgets, gifts, and viral products.
      </p>
    </section>

    <!-- Tag Group Selection Section -->
    <TagGroupSelection client:load onFilterSelect={() => {}} />

    <!-- Product Grid Section -->
    <section id="products" class="px-4 md:px-8 py-8 particles-section">
      <GradientDotsBackground client:load />
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="product-grid">
          {allProducts.map((product: Product) => {
            // Extract price range from tags - ONLY match specific price patterns
            const priceTag = product.tags?.find(tag => {
              // Match: under-20, under-50, under-100
              if (/^under-\d+$/.test(tag)) return true;
              // Match: over-100, over-50, etc
              if (/^over-\d+$/.test(tag)) return true;
              // Match: 20-50, 50-100 (number-number format ONLY)
              if (/^\d+-\d+$/.test(tag)) return true;
              return false;
            });
            
            // Format price label
            let priceLabel;
            if (priceTag) {
              if (priceTag.startsWith('under-')) {
                priceLabel = `under $${priceTag.replace('under-', '')}`;
              } else if (priceTag.startsWith('over-')) {
                priceLabel = `over $${priceTag.replace('over-', '')}`;
              } else if (/^\d+-\d+$/.test(priceTag)) {
                const parts = priceTag.split('-');
                priceLabel = `$${parts[0]}-$${parts[1]}`;
              }
            }
            
            return (
              <div
                class="product-card-wrapper"
                data-tags={product.tags?.map(t => t.toLowerCase()).join(',') || ''}
                data-categories={[...(product.categories || []), product.primaryCategory].filter(Boolean).map(c => c.toLowerCase()).join(',')}
              >
                <ProductCard
                  name={product.name}
                  description={product.description}
                  image={product.image}
                  url={product.url}
                  primaryCategory={product.primaryCategory}
                  price={priceLabel}
                />
              </div>
            );
          })}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }

  .libre-baskerville-regular {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: normal;
  }

  .libre-baskerville-bold {
    font-family: "Libre Baskerville", serif;
    font-weight: 700;
    font-style: normal;
  }

  .libre-baskerville-regular-italic {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: italic;
  }

  .particles-section {
    position: relative;
    background-color: white;
    overflow: hidden;
  }

  .particles-section > *:not(.particles-background) {
    position: relative;
    z-index: 1;
  }

  .text-gradient-logo {
    background: linear-gradient(to bottom, #FEFEB6, #FCB55B, #FC3DB1);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: #FCB55B; /* Fallback */
    -webkit-text-stroke: 1px #000000;
    text-stroke: 1px #000000;
    paint-order: stroke fill;
  }

  .product-card-wrapper {
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .product-card-wrapper.hidden {
    display: none;
  }
</style>

<script>
  // Handle filter chip filtering (supports multi-select AND logic)
  document.addEventListener('astro:page-load', () => {
    // Get category from URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const categoryFilter = urlParams.get('category')?.toLowerCase();
    
    let currentSearchQuery = '';
    let currentTagFilters: string[] = [];

    const applyFilters = (selectedFilters: string[] = [], category?: string, searchQuery: string = '') => {
      const productWrappers = document.querySelectorAll('.product-card-wrapper');
      const active = Array.isArray(selectedFilters) ? selectedFilters.map(s => String(s).toLowerCase()) : [];

      productWrappers.forEach((wrapper) => {
        const tags = (wrapper.getAttribute('data-tags') || '').split(',').map(t => t.trim()).filter(Boolean);
        const categories = (wrapper.getAttribute('data-categories') || '').split(',').map(c => c.trim()).filter(Boolean);
        const name = wrapper.querySelector('h3')?.textContent?.toLowerCase() || '';
        const description = wrapper.querySelector('p')?.textContent?.toLowerCase() || '';

        // Search filter
        let searchMatch = true;
        if (searchQuery) {
          searchMatch = name.includes(searchQuery) || description.includes(searchQuery);
        }

        // Category filter (from URL)
        let categoryMatch = true;
        if (category) {
          const normalizedCategory = category.trim().toLowerCase();
          categoryMatch = categories.some(c => c.toLowerCase() === normalizedCategory);
        }

        // Tag filter
        let tagMatch = true;
        if (active.length > 0) {
          // OR match: at least one of the selected tags must be present on the product
          tagMatch = active.some(t => tags.includes(t));
        }

        // Show if all filters match (search AND category AND tags)
        if (searchMatch && categoryMatch && tagMatch) {
          wrapper.classList.remove('hidden');
        } else {
          wrapper.classList.add('hidden');
        }
      });
    };

    // Apply category filter on page load
    if (categoryFilter) {
      applyFilters([], categoryFilter);
    }

    // Listen for search events
    window.addEventListener('searchPerformed', ((e: CustomEvent) => {
      currentSearchQuery = e.detail.query.toLowerCase();
      applyFilters(currentTagFilters, categoryFilter || undefined, currentSearchQuery);
    }) as EventListener);

    window.addEventListener('searchCleared', () => {
      currentSearchQuery = '';
      applyFilters(currentTagFilters, categoryFilter || undefined, '');
    });

    // Backward compatibility: single-select event
    window.addEventListener('filterSelected', ((e: CustomEvent) => {
      const selectedFilter = e.detail.filter;
      currentTagFilters = selectedFilter === null ? [] : [selectedFilter];
      applyFilters(currentTagFilters, categoryFilter || undefined, currentSearchQuery);
    }) as EventListener);

    // New multi-select event
    window.addEventListener('filtersSelected', ((e: CustomEvent) => {
      const arr = Array.isArray(e.detail.filters) ? e.detail.filters : [];
      currentTagFilters = arr;
      applyFilters(arr, categoryFilter || undefined, currentSearchQuery);
    }) as EventListener);
  });
</script>
