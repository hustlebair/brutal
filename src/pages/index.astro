---
import Layout from '@layouts/Default.astro';
import ProductCard from '@components/home/ProductCard.astro';
import GradientDotsBackground from '@components/home/GradientDotsBackground';
import TagGroupSelection from '@components/home/TagGroupSelection';
import { getProducts, type Product } from '@data/products';
import { Particles } from '@components/ui/Particles';
import SphereImageGrid, { type ImageData } from '@components/ui/ImgSphere';

// Get base URL for image normalization (works in both dev and production)
// Use site URL in production, or current origin in dev
const baseUrl = Astro.site?.toString() || new URL(Astro.url.origin).toString();
const allProducts = await getProducts(baseUrl);

// Prepare images for sphere - use product images, duplicate to fill sphere
const sphereImages: ImageData[] = [];
const productsForSphere = allProducts.slice(0, 20); // Use first 20 products
for (let i = 0; i < 60; i++) {
  const product = productsForSphere[i % productsForSphere.length];
  
  // Extract price tag and format it
  const priceTag = product.tags?.find(tag => {
    if (/^under-\d+$/.test(tag)) return true;
    if (/^over-\d+$/.test(tag)) return true;
    if (/^\d+-\d+$/.test(tag)) return true;
    return false;
  });
  
  let priceLabel;
  if (priceTag) {
    if (priceTag.startsWith('under-')) {
      priceLabel = `under $${priceTag.replace('under-', '')}`;
    } else if (priceTag.startsWith('over-')) {
      priceLabel = `over $${priceTag.replace('over-', '')}`;
    } else if (/^\d+-\d+$/.test(priceTag)) {
      const parts = priceTag.split('-');
      priceLabel = `$${parts[0]}-$${parts[1]}`;
    }
  }
  
  sphereImages.push({
    id: `product-${i + 1}`,
    src: product.image,
    alt: product.name,
    title: product.name,
    description: product.description,
    url: product.url,
    primaryCategory: product.primaryCategory,
    priceLabel: priceLabel
  });
}
---

<Layout
  title="Highest Liked: The Internet's Wishlist"
  pageTitle="HighestLiked"
  description="Discover the internet's wishlist â€” a curated collection of the coolest gadgets, viral Amazon finds, and trending TikTok products. From clever home upgrades to impulse-buy gifts, Highest Liked showcases what everyone's talking about online."
  ogImage={new URL('/og-image.jpg', Astro.url)}
>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative overflow-hidden hero-section px-4 md:px-8 pt-32 md:pt-40 pb-4">
      <!-- Full-width Particles Background -->
      <Particles 
        client:load
        colors={["#FCB55B", "#FC3DB1"]}
        quantity={200}
        staticity={30}
        ease={40}
        size={0.4}
        vx={0.05}
        vy={0.05}
      />
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col items-center justify-center min-h-[500px] md:min-h-[600px]">
          <!-- Image Sphere -->
          <div class="relative z-10 flex justify-center items-center">
            <SphereImageGrid
              client:load
              images={sphereImages}
              containerSize={500}
              sphereRadius={180}
              dragSensitivity={0.8}
              momentumDecay={0.96}
              maxRotationSpeed={6}
              baseImageScale={0.22}
              hoverScale={1.3}
              perspective={1000}
              autoRotate={true}
              autoRotateSpeed={0.2}
              className="hero-sphere"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Tag Group Selection Section -->
    <TagGroupSelection client:load onFilterSelect={() => {}} />

    <!-- Product Grid Section -->
    <section id="products" class="px-4 md:px-8 py-8 particles-section">
      <GradientDotsBackground client:load />
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="product-grid">
          {allProducts.map((product: Product) => {
            // Extract price range from tags - ONLY match specific price patterns
            const priceTag = product.tags?.find(tag => {
              // Match: under-20, under-50, under-100
              if (/^under-\d+$/.test(tag)) return true;
              // Match: over-100, over-50, etc
              if (/^over-\d+$/.test(tag)) return true;
              // Match: 20-50, 50-100 (number-number format ONLY)
              if (/^\d+-\d+$/.test(tag)) return true;
              return false;
            });
            
            // Format price label
            let priceLabel;
            if (priceTag) {
              if (priceTag.startsWith('under-')) {
                priceLabel = `under $${priceTag.replace('under-', '')}`;
              } else if (priceTag.startsWith('over-')) {
                priceLabel = `over $${priceTag.replace('over-', '')}`;
              } else if (/^\d+-\d+$/.test(priceTag)) {
                const parts = priceTag.split('-');
                priceLabel = `$${parts[0]}-$${parts[1]}`;
              }
            }
            
            return (
              <div
                class="product-card-wrapper"
                data-tags={product.tags?.map(t => t.toLowerCase()).join(',') || ''}
                data-categories={[...(product.categories || []), product.primaryCategory].filter(Boolean).filter((c): c is string => typeof c === 'string').map(c => c.toLowerCase()).join(',')}
              >
                <ProductCard
                  name={product.name}
                  description={product.description}
                  image={product.image}
                  url={product.url}
                  primaryCategory={product.primaryCategory}
                  price={priceLabel}
                />
              </div>
            );
          })}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }

  .libre-baskerville-regular {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: normal;
  }

  .libre-baskerville-bold {
    font-family: "Libre Baskerville", serif;
    font-weight: 700;
    font-style: normal;
  }

  .libre-baskerville-regular-italic {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: italic;
  }

  .particles-section {
    position: relative;
    background-color: white;
    overflow: hidden;
  }

  .particles-section > *:not(.particles-background) {
    position: relative;
    z-index: 1;
  }

  .text-gradient-logo {
    background: linear-gradient(to bottom, #FEFEB6, #FCB55B, #FC3DB1);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: #FCB55B; /* Fallback */
    -webkit-text-stroke: 1px #000000;
    text-stroke: 1px #000000;
    paint-order: stroke fill;
  }

  .hero-section {
    padding: 0;
    position: relative;
    min-height: 500px;
  }

  .hero-image-container {
    min-height: 500px;
    position: relative;
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 400px;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    .hero-sphere {
      transform: scale(0.6);
      transform-origin: center;
    }
  }

  .product-card-wrapper {
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .product-card-wrapper.hidden {
    display: none;
  }
</style>

<script>
  // Handle filter chip filtering with grouped AND/OR logic
  document.addEventListener('astro:page-load', () => {
    // Get category from URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const categoryFilter = urlParams.get('category')?.toLowerCase();
    
    let currentSearchQuery = '';
    let currentPriceFilters: string[] = [];
    let currentRecipientFilters: string[] = [];

    const applyFilters = (
      priceFilters: string[] = [], 
      recipientFilters: string[] = [],
      category?: string, 
      searchQuery: string = ''
    ) => {
      const productWrappers = document.querySelectorAll('.product-card-wrapper');

      productWrappers.forEach((wrapper) => {
        const tags = (wrapper.getAttribute('data-tags') || '').split(',').map(t => t.trim()).filter(Boolean);
        const categories = (wrapper.getAttribute('data-categories') || '').split(',').map(c => c.trim()).filter(Boolean);
        const name = wrapper.querySelector('h3')?.textContent?.toLowerCase() || '';
        const description = wrapper.querySelector('p')?.textContent?.toLowerCase() || '';

        // Search filter
        let searchMatch = true;
        if (searchQuery) {
          searchMatch = name.includes(searchQuery) || description.includes(searchQuery);
        }

        // Category filter (from URL)
        let categoryMatch = true;
        if (category) {
          const normalizedCategory = category.trim().toLowerCase();
          categoryMatch = categories.some(c => c.toLowerCase() === normalizedCategory);
        }

        // Price filter (OR within group)
        let priceMatch = true;
        if (priceFilters.length > 0) {
          priceMatch = priceFilters.some(pf => tags.includes(pf));
        }

        // Recipient filter (OR within group)
        // Support both "for-him" and "gifts-for-him" formats
        let recipientMatch = true;
        if (recipientFilters.length > 0) {
          recipientMatch = recipientFilters.some(rf => 
            tags.includes(rf) || tags.includes(`gifts-${rf}`)
          );
        }

        // AND logic between all groups
        if (searchMatch && categoryMatch && priceMatch && recipientMatch) {
          wrapper.classList.remove('hidden');
        } else {
          wrapper.classList.add('hidden');
        }
      });
    };

    // Apply category filter on page load
    if (categoryFilter) {
      applyFilters([], [], categoryFilter);
    }

    // Listen for search events
    window.addEventListener('searchPerformed', ((e: CustomEvent) => {
      currentSearchQuery = e.detail.query.toLowerCase();
      applyFilters(currentPriceFilters, currentRecipientFilters, categoryFilter || undefined, currentSearchQuery);
    }) as EventListener);

    window.addEventListener('searchCleared', () => {
      currentSearchQuery = '';
      applyFilters(currentPriceFilters, currentRecipientFilters, categoryFilter || undefined, '');
    });

    // New grouped filters event (AND between groups, OR within groups)
    window.addEventListener('filtersSelectedGrouped', ((e: CustomEvent) => {
      currentPriceFilters = e.detail.priceFilters || [];
      currentRecipientFilters = e.detail.recipientFilters || [];
      applyFilters(currentPriceFilters, currentRecipientFilters, categoryFilter || undefined, currentSearchQuery);
    }) as EventListener);
  });
</script>
