---
import Layout from '@layouts/Default.astro';
import ProductCard from '@components/home/ProductCard.astro';
import { getProducts, type Product } from '@data/products';

// Get base URL for image normalization (works in both dev and production)
// Use site URL in production, or current origin in dev
const baseUrl = Astro.site?.toString() || new URL(Astro.url.origin).toString();
const allProducts = await getProducts(baseUrl);
---

<Layout
  title="Highest Liked: The Internet's Wishlist"
  pageTitle="HighestLiked"
  description="Discover the internet's wishlist â€” a curated collection of the coolest gadgets, viral Amazon finds, and trending TikTok products. From clever home upgrades to impulse-buy gifts, Highest Liked showcases what everyone's talking about online."
  ogImage={new URL('/og-image.jpg', Astro.url)}
>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="px-4 md:px-8 pt-16 pb-4 text-center">
      <h1 class="libre-baskerville-bold text-4xl md:text-6xl lg:text-7xl text-black mb-4 md:mb-6 leading-tight">
        The Internet's <span class="text-[#FF9900]">Wishlist</span>
      </h1>
      <p class="libre-baskerville-regular text-lg md:text-xl lg:text-2xl text-gray-700 max-w-3xl mx-auto mb-8 md:mb-12 leading-relaxed">
        The Highest-Liked gadgets, gifts, and viral products.
      </p>
    </section>

    <!-- Product Grid Section -->
    <section id="products" class="px-4 md:px-8 py-8">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {allProducts.map((product: Product) => (
            <ProductCard
              name={product.name}
              description={product.description}
              image={product.image}
              url={product.url}
              primaryCategory={product.primaryCategory}
            />
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }

  .libre-baskerville-regular {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: normal;
  }

  .libre-baskerville-bold {
    font-family: "Libre Baskerville", serif;
    font-weight: 700;
    font-style: normal;
  }

  .libre-baskerville-regular-italic {
    font-family: "Libre Baskerville", serif;
    font-weight: 400;
    font-style: italic;
  }
</style>
